<tr>
  <td><%= link_to user.name, admin_profile_path(user) %></td>
  <td><%= user.email %></td>
  <td><%= user.role %></td>
  <td align="right">
    <% if current_user.admin? %>
      <% unless current_user? user %>
        <%= link_to edit_admin_user_path(user), remote: true, class: "btn-icon" do %>
          <i class="fa fa-pencil-square-o"></i>
          <%= t("user.admin.actions.edit") %>
        <% end %>
        <%= link_to admin_user_path(user), method: :delete,
          data:{confirm: t("custom.confirm_delete")} do %>
          <i class="fa fa-trash-o"></i>
          <%= t("user.admin.actions.delete") %>
        <% end %>
      <% end %>
    <% end %>
  </td>
</tr>
