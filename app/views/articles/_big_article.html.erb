<div class="col-md-7">
  <div class="big-intro">
    <%= link_to image_tag(article.image_url, width: "645px",
      class: "img-responsive"), article %>
    <h3 class="title">
      <%= link_to article do %>
        <% if article.audio_url? %>
          <i class="fa fa-volume-up"></i>
        <% end %>
        <%= truncate article.title, length: 160 %>
      <% end %>
    </h3>
  </div>
</div>
