<div class="col-md-5">
  <div class="small-intro">
    <div class="media">
      <div class="media-left">
        <%=  link_to image_tag(article.image_url, width: "165px",
          class: "media-object"), article %>
      </div>
      <div class="media-body">
        <h5 class="media-heading">
          <%= link_to article do %>
            <% if article.audio_url? %>
              <i class="fa fa-volume-up"></i>
            <% end %>
            <%= truncate article.title, length: 100 %>
          <% end %>
        </h5>
      </div>
    </div>
  </div>
</div>
